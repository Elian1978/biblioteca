<p id="notice"><%= notice %></p>
<%= form_with url: "/books", method: :get, class: "form-inline" do |form| %>
  <div class="form-group mx-sm-3 mb-2">
   <%= form.label :query, "Filtrar proyectos: " %>
    <%= form.select :status, [['Todos', :all],["Prestado", :prestado], ["Estante", :estante]],{selected: params[:status] }, class:'form-control' %>
    </div>
   <%= form.submit "Buscar", class: 'bg-danger text-white mb-2' %>
 <% end %>
 <br>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th>Checkout</th>
      <th>Checkin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status%></td>
         <td><%= book.checkout %></td>
        <td><%= book.checkin %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
